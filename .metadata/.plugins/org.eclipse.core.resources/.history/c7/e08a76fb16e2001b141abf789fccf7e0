	int age[];
	long phNo;
	Scanner sc=new Scanner(System.in);
	
	void airline() {
		
		System.out.println("----Welcome to AirExpress------");
		char ch;
		do {
			System.out.println("Choose any option: \n 1.Top Flight Routes\n 2.Book Flights\n 3.Exciting Offers\n 4.Know More About AirExpress");
			int choice=sc.nextInt();
		
			switch(choice) {
				case 1: System.out.println("SpiceJet : DELHI (20:05) ----> MUMBAI (22:05)  [1*ADULT = 4655/-]");	
						System.out.println();
						System.out.println("VISTARA  : MUMBAI (20:55)----> BANGLORE (22:40) [1*ADULT = 9266/-]");
						System.out.println();
						System.out.println("Air India: DELHI (20:50) ----> GOA (12:45) [1*ADULT = 9000/-]");
						break;
				case 2: System.out.println("Book your flights now!!");
						bookFlights();
						break;
				case 3: System.out.println(" (*) Promo Code: EASEFLY to get flat Rs.350 OFF on Spicejet");
						break;
				case 4: System.out.println("\r\n"
						+ "AirExpress is the flag carrier airline of India.\n Headquartered at New Delhi.\n It is owned by AirExpress Limited.\n A government-owned enterprise.\n  Operates a fleet of Airbus and Boeing aircraft serving 102 domestic and international destinations. ");
						break;
				default:System.out.println("Invalid Choice!");
						break;
		
			}System.out.println();
			System.out.println("Do you want to continue? : Y or N");
			 ch = sc.next().charAt(0); 
		} 
		while(ch=='Y'||ch=='y');
		System.out.println("THANK YOU FOR CHOOSING US!!");
	}
	
 void bookFlights() {
	System.out.println("Choose your flight: ");
