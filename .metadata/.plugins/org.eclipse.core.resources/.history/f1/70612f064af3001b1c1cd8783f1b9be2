package DataStructures;

public class Search_Sort {
	
	
	public static  int search(int[] a,int k) {
		
		for(int i=0;i<a.length;i++)
		{	if(a[i]==k)
				return i;
		}
		
		return -1;
	}
	
	public void sort(int []a) {
		int n=a.length;
		
		 int temp = 0;  
         for(int i=0; i < n; i++){  
            for(int j=1; j < (n-i); j++){  
                if(a[j-1] > a[j]){  
                     temp = a[j-1];  
                     a[j-1] = a[j];  
                     a[j] = temp;
                      
                }  
                               
             } 
         } 
         
         System.out.println("Array after bubble sort: ");
         for(int i=0;i<n;i++) {
        	 System.out.print(a[i]+" ");
         }
	}
	
	public static void main(String[] args) {
		int []a= {1,2,3,4,5,6,7};
		int k=6;
		
		int ans=search(a,k);
		if(ans!=-1)
			System.out.println("The item is found in "+ans);
		else 
			System.out.println("The item not found!");
	}
	
	

}
