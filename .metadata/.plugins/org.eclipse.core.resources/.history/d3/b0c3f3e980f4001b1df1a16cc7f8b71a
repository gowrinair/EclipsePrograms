package EmployeeDB_Connection;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class JDBC_Fcatory {
	
	public static void main(String[] args) {
		try {
			
			Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/employeeDB","root","root");
			Statement stmnt=con.createStatement();
			
			Scanner sc=new Scanner(System.in);
			int ch;
			do {
				System.out.println("---------Employee Database------------\n");
				System.out.println("Choose your options: ");
				System.out.println("1.Show All tables\n2.Select from a table\n3.Insert in to a table\n4.Exit");
				ch=sc.nextInt();
			
			
			switch(ch) {
			
			case 1: ResultSet rs = stmnt.executeQuery("show tables");
					while (rs.next()) {
						System.out.print(rs.getString(1)+" ");
					}
					break;
			case 2: 
			default:System.out.println("Invalid choice");
					break;
			
			}
			}while(ch!=4);
			
			con.close();
		}
		catch (Exception e) {
			// TODO: handle exception
			System.out.println(e);
		}
	}
	
}	